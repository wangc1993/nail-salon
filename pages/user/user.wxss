/* pages/user/user.wxss */
.user_base_info{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  font-size: 30rpx;
  border-bottom: 2rpx solid #ccc;
  padding: 80rpx 0;
}

.user_avatar{
  width: 200rpx;
  height: 200rpx;
  margin-right: 60rpx;
}
.user_avatar image{
  width: 100%;
  height: 100%;
  border-radius: 100%;
}
.user_avatar image:hover{
  opacity: 0.5;
}

.user_info{
  line-height: 48rpx;
}
.uer_addr_message{
  width: 100%;
  margin-top: 10rpx;
}

.user_addr_title{
  font-size: 35rpx;
}
.user_addr_item{
  padding:40rpx;
}
.addr_sub{
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  padding:15rpx;
  border: 2rpx solid #ccc;
  margin-top: 30rpx; 
}
.addr_sub:hover{
  background: #ddd;
  color: red;
}
